# Database Configuration
# Скопируйте этот файл в .env.local для локальной разработки
# И в .env на сервере для production

# ВАРИАНТ 1: Прямое подключение к PostgreSQL (рекомендуется для Beget)
# Формат: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/database
# Если требуется SSL (обычно для облачных БД):
DATABASE_SSL=true

# ВАРИАНТ 2: Supabase Cloud (альтернатива)
# URL вашего Supabase проекта
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Anon/Public ключ (для клиентской части)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Service Role ключ (для серверной части - более привилегированный)
# ВАЖНО: Никогда не используйте этот ключ в клиентском коде!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Приоритет: DATABASE_URL > Supabase > файловая система
